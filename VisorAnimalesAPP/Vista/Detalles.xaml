<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisorAnimalesAPP.Vista.Detalles"
             Title="Detalles">
    <StackLayout Padding="10">
        <Image Source="{Binding imagen}" Aspect="AspectFit" HeightRequest="200" />
        <Label Text="{Binding nombre}" FontAttributes="Bold" FontSize="Large" Margin="0,10,0,0" />
        <Label Text="{Binding fecha}" FontSize="Medium" TextColor="Gray" />
        <Label Text="{Binding descripcion}" FontSize="Medium" TextColor="Gray" />
    </StackLayout>
</ContentPage>